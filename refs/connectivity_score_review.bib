	journal = {Informatics in Medicine Unlocked},
	author = {Rahman, Md Foyzur and Rahman, Md Rezanur and Islam, Tania and Zaman, Toyfiquz and Shuvo, Md Abu Hena and Hossain, Md Tofazzal and Islam, Md Rafiqul and Karim, Md Rezaul and Moni, Mohammad Ali},
