	keywords = {Computational Biology, Gene Expression Profiling, Humans, Transcriptome, Neoplasms, Phenotype, Personalised medicine, Precision Medicine, Gene signature, Dimensional reduction, Gene set enrichment, Gene set score, Molecular features, Molecular phenotypes, Single sample, Singscore},
	pages = {404}
