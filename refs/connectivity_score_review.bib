	pmid = {23462907},
	keywords = {Computational Biology, Reproducibility of Results, Software, Humans, Animals, Mice, Cluster Analysis, Algorithms, Proteins, Pharmaceutical Preparations, Protein Binding, Protein Interaction Domains and Motifs, Protein Interaction Mapping, Phenotype},
	pages = {1686--1696}
