	pmcid = {PMC5007636},
	keywords = {Mycobacterium tuberculosis, Humans, Animals, Female, Cell Line, Tuberculosis, Time Factors, Antitubercular Agents, Treatment Outcome, Disease Models, Animal, Mice, Inbred BALB C, Drug Therapy, Monocytes, Combined Modality Therapy, Hydroxymethylglutaryl-CoA Reductase Inhibitors},
