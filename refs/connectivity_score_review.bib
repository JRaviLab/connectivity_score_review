	pmid = {29028878},
	keywords = {Computational Biology, Software, Humans, Algorithms, Binding Sites, Internet, Drug Discovery, Databases, Pharmaceutical, Drug Repositioning, Search Engine, Ligands, High-Throughput Screening Assays},
	pages = {299--316}
}

@article{zeng_drug-path_2015,
